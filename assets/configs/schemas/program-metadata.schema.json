{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Program Metadata",
  "description": "Core program information and requirements",
  "type": "object",
  "required": ["id", "name", "version", "duration", "difficulty"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique program identifier",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Display name of the program",
      "minLength": 1,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "description": "Detailed program description",
      "maxLength": 500
    },
    "version": {
      "type": "string",
      "description": "Program version (semantic versioning)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "email": {"type": "string", "format": "email"},
        "website": {"type": "string", "format": "uri"}
      }
    },
    "duration": {
      "type": "object",
      "required": ["weeks", "daysPerWeek"],
      "properties": {
        "weeks": {
          "type": "integer",
          "minimum": 1,
          "maximum": 52,
          "description": "Total program duration in weeks"
        },
        "daysPerWeek": {
          "type": "integer",
          "minimum": 1,
          "maximum": 7,
          "description": "Number of workout days per week"
        },
        "estimatedDuration": {
          "type": "string",
          "description": "Estimated time per session",
          "example": "45-60 minutes"
        }
      }
    },
    "difficulty": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced", "expert"],
      "description": "Target difficulty level"
    },
    "targetAudience": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["general-fitness", "weight-loss", "muscle-gain", "strength", "endurance", "sport-specific", "rehabilitation", "engagement-prep"]
      },
      "description": "Primary goals this program addresses"
    },
    "equipment": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Equipment that must be available"
        },
        "optional": {
          "type": "array", 
          "items": {"type": "string"},
          "description": "Equipment that enhances the program"
        },
        "alternatives": {
          "type": "object",
          "description": "Equipment substitutions",
          "additionalProperties": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      }
    },
    "settings": {
      "type": "object",
      "description": "Default program settings",
      "properties": {
        "autoProgression": {"type": "boolean", "default": true},
        "restTimers": {"type": "boolean", "default": true},
        "unitSystem": {"type": "string", "enum": ["metric", "imperial"], "default": "imperial"},
        "trackingFields": {
          "type": "array",
          "items": {"type": "string", "enum": ["weight", "reps", "time", "distance", "notes"]},
          "default": ["weight", "reps", "time", "notes"]
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Searchable tags for categorization"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Program creation timestamp"
    },
    "lastModified": {
      "type": "string", 
      "format": "date-time",
      "description": "Last modification timestamp"
    }
  }
}