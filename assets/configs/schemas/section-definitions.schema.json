{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Section Definitions", 
  "description": "Workout blocks/sections like warmup, strength, EMOM, etc.",
  "type": "object",
  "required": ["sections"],
  "properties": {
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "type"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique section identifier",
            "pattern": "^[a-z0-9-]+$"
          },
          "name": {
            "type": "string",
            "description": "Section display name",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Section description and purpose"
          },
          "type": {
            "type": "string",
            "enum": ["warmup", "strength", "power", "cardio", "emom", "amrap", "tabata", "circuit", "superset", "dropset", "cluster", "cooldown", "mobility", "flexibility"],
            "description": "Section training type"
          },
          "structure": {
            "type": "object",
            "properties": {
              "format": {
                "type": "string",
                "enum": ["traditional", "timed", "rounds", "ladder", "pyramid", "wave"],
                "description": "How the section is structured"
              },
              "workRest": {
                "type": "object",
                "properties": {
                  "work": {"type": "string", "description": "Work period duration"},
                  "rest": {"type": "string", "description": "Rest period duration"},
                  "rounds": {"type": "integer", "minimum": 1},
                  "roundRest": {"type": "string", "description": "Rest between rounds"}
                }
              },
              "setRep": {
                "type": "object",
                "properties": {
                  "sets": {"type": "integer", "minimum": 1},
                  "reps": {"type": ["integer", "string"]},
                  "rest": {"type": "string"},
                  "progression": {"type": "string", "enum": ["linear", "pyramid", "reverse-pyramid", "wave"]}
                }
              },
              "timeConstraints": {
                "type": "object",
                "properties": {
                  "totalTime": {"type": "string"},
                  "minTime": {"type": "string"},
                  "maxTime": {"type": "string"},
                  "timeCap": {"type": "string"}
                }
              }
            }
          },
          "intensity": {
            "type": "object",
            "properties": {
              "rpe": {
                "type": "object",
                "properties": {
                  "target": {"type": "number", "minimum": 1, "maximum": 10},
                  "range": {
                    "type": "object",
                    "properties": {
                      "min": {"type": "number"},
                      "max": {"type": "number"}
                    }
                  }
                }
              },
              "percentage": {
                "type": "object",
                "properties": {
                  "of1RM": {"type": "number", "minimum": 0, "maximum": 150},
                  "range": {
                    "type": "object",
                    "properties": {
                      "min": {"type": "number"},
                      "max": {"type": "number"}
                    }
                  }
                }
              },
              "heartRate": {
                "type": "object",
                "properties": {
                  "zone": {"type": "integer", "minimum": 1, "maximum": 5},
                  "percentage": {
                    "type": "object",
                    "properties": {
                      "min": {"type": "integer"},
                      "max": {"type": "integer"}
                    }
                  }
                }
              }
            }
          },
          "exerciseConstraints": {
            "type": "object",
            "properties": {
              "minExercises": {"type": "integer", "minimum": 1},
              "maxExercises": {"type": "integer", "minimum": 1},
              "exerciseTypes": {
                "type": "array",
                "items": {"type": "string"},
                "description": "Allowed exercise categories"
              },
              "muscleGroupLimits": {
                "type": "object",
                "properties": {
                  "maxSameGroup": {"type": "integer"},
                  "requireOpposing": {"type": "boolean", "default": false}
                }
              },
              "equipmentLimits": {
                "type": "array",
                "items": {"type": "string"},
                "description": "Required or forbidden equipment"
              }
            }
          },
          "adaptations": {
            "type": "object",
            "properties": {
              "scaling": {
                "type": "object",
                "properties": {
                  "timeBased": {
                    "type": "object",
                    "properties": {
                      "beginner": {"type": "number", "description": "Multiplier for beginners"},
                      "advanced": {"type": "number", "description": "Multiplier for advanced"}
                    }
                  },
                  "volumeBased": {
                    "type": "object",
                    "properties": {
                      "beginner": {"type": "number"},
                      "advanced": {"type": "number"}
                    }
                  }
                }
              },
              "modifications": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "condition": {"type": "string"},
                    "change": {"type": "string"},
                    "description": {"type": "string"}
                  }
                }
              }
            }
          },
          "flowRules": {
            "type": "object",
            "properties": {
              "preferredPosition": {
                "type": "string",
                "enum": ["warmup", "early", "middle", "late", "cooldown"],
                "description": "Where in workout this section works best"
              },
              "cannotFollow": {
                "type": "array",
                "items": {"type": "string"},
                "description": "Section types that shouldn't precede this one"
              },
              "shouldFollow": {
                "type": "array", 
                "items": {"type": "string"},
                "description": "Section types that work well before this one"
              },
              "requiresPrep": {
                "type": "array",
                "items": {"type": "string"},
                "description": "Preparation sections needed"
              }
            }
          },
          "defaultTemplates": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {"type": "string"},
                "description": {"type": "string"},
                "parameters": {"type": "object"},
                "exercises": {
                  "type": "array",
                  "items": {"type": "string"}
                }
              }
            }
          }
        }
      }
    }
  }
}