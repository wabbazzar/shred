{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Day Templates",
  "description": "Templates for different types of workout days",
  "type": "object",
  "required": ["templates"],
  "properties": {
    "templates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "type", "location"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique template identifier",
            "pattern": "^[a-z0-9-]+$"
          },
          "name": {
            "type": "string",
            "description": "Template display name",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Template description"
          },
          "type": {
            "type": "string",
            "enum": ["strength", "cardio", "hiit", "circuit", "yoga", "mobility", "recovery", "rest", "mixed"],
            "description": "Primary workout type"
          },
          "location": {
            "type": "string",
            "enum": ["gym", "home", "outdoor", "anywhere"],
            "description": "Where this workout can be performed"
          },
          "duration": {
            "type": "object",
            "properties": {
              "min": {"type": "integer", "minimum": 5},
              "max": {"type": "integer", "minimum": 5},
              "typical": {"type": "integer", "minimum": 5},
              "unit": {"type": "string", "enum": ["minutes", "hours"], "default": "minutes"}
            }
          },
          "equipment": {
            "type": "object",
            "properties": {
              "required": {
                "type": "array",
                "items": {"type": "string"}
              },
              "optional": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
          },
          "structure": {
            "type": "object",
            "properties": {
              "warmup": {
                "type": "object",
                "properties": {
                  "duration": {"type": "string"},
                  "sections": {
                    "type": "array",
                    "items": {"type": "string"}
                  }
                }
              },
              "main": {
                "type": "object",
                "properties": {
                  "sections": {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  "totalSets": {"type": "integer"},
                  "estimatedTime": {"type": "string"}
                }
              },
              "cooldown": {
                "type": "object",
                "properties": {
                  "duration": {"type": "string"},
                  "sections": {
                    "type": "array", 
                    "items": {"type": "string"}
                  }
                }
              }
            }
          },
          "intensity": {
            "type": "object",
            "properties": {
              "overall": {
                "type": "string",
                "enum": ["very-low", "low", "moderate", "high", "very-high"]
              },
              "rpe": {
                "type": "object",
                "properties": {
                  "target": {"type": "number", "minimum": 1, "maximum": 10},
                  "range": {
                    "type": "object",
                    "properties": {
                      "min": {"type": "number"},
                      "max": {"type": "number"}
                    }
                  }
                }
              },
              "heartRate": {
                "type": "object",
                "properties": {
                  "zone": {"type": "integer", "minimum": 1, "maximum": 5},
                  "percentage": {
                    "type": "object",
                    "properties": {
                      "min": {"type": "integer"},
                      "max": {"type": "integer"}
                    }
                  }
                }
              }
            }
          },
          "recovery": {
            "type": "object",
            "properties": {
              "difficulty": {"type": "number", "minimum": 1, "maximum": 10},
              "recommendedRecovery": {"type": "string"},
              "nextDayRecommendation": {
                "type": "string",
                "enum": ["rest", "light", "moderate", "any"]
              }
            }
          },
          "adaptations": {
            "type": "object",
            "properties": {
              "beginner": {
                "type": "object",
                "properties": {
                  "modifications": {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  "reductionFactor": {"type": "number", "minimum": 0.1, "maximum": 1.0}
                }
              },
              "advanced": {
                "type": "object",
                "properties": {
                  "progressions": {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  "intensityFactor": {"type": "number", "minimum": 1.0, "maximum": 2.0}
                }
              }
            }
          },
          "dayOfWeek": {
            "type": "object",
            "properties": {
              "preferred": {
                "type": "array",
                "items": {"type": "string", "enum": ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"]}
              },
              "avoid": {
                "type": "array",
                "items": {"type": "string", "enum": ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"]}
              }
            }
          }
        }
      }
    }
  }
}